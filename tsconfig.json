{
    "compilerOptions": {
        "skipLibCheck": true,
        "module": "CommonJS",
        "target": "es2017",
        "outDir": "build",
        "lib": [
            "es2020",
            "dom",
            "dom.iterable"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "downlevelIteration": true
    },
    "exclude": [
        "node_modules"
    ]
}